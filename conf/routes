# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /kod                        controllers.Application.sourceCode
GET     /oautorze                    controllers.Application.about

#api
GET     /api/suggestions                        controllers.ApiController.suggestions
POST     /api/suggestions                       controllers.ApiController.createSuggestion
DELETE     /api/suggestions/:id/:adminToken     controllers.ApiController.deleteSuggestion(id: String, adminToken:String)

GET     /api/issues                        controllers.ApiController.issues
POST     /api/issues                        controllers.ApiController.createIssue
DELETE     /api/issues/:id/:adminToken     controllers.ApiController.deleteIssue(id: String, adminToken:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)